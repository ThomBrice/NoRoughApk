<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account">
        <ImageView
            android:id="@+id/account_picture"
            android:src="@drawable/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:layout_margin="10dp"
            android:clickable="true"/>
        <TextView
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:layout_toRightOf="@+id/account_picture"
            android:layout_centerVertical="true"/>
        <Switch
            android:id="@+id/bluetootSwitch"
            android:text="Bluetooth"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:rippleColor="@color/ripples"
        app:cardCornerRadius="@dimen/corner_size"
        android:clickable="true"
        android:layout_below="@+id/account">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/player"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nouvelle Partie"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/historique_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:rippleColor="@color/ripples"
        app:cardCornerRadius="@dimen/corner_size"
        android:layout_below="@id/start_button"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/historic"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historique"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView1"
                android:layout_marginStart="60dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/statistiques_button"
        android:layout_below="@+id/historique_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:rippleColor="@color/ripples"
        app:cardCornerRadius="@dimen/corner_size"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/statistiques"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistiques"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/analyse_button"
        android:layout_below="@+id/statistiques_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:rippleColor="@color/ripples"
        app:cardCornerRadius="@dimen/corner_size"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/analyse"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyse Swing"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:layout_toRightOf="@id/imageView2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
