<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/carteTrou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/textTrou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:text="Trou : "/>

            <TextView
                android:id="@+id/numeroTrou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textTrou"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:text="1"/>

            <TextView
                android:id="@+id/textPar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTrou"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:text="Par : " />

            <TextView
                android:id="@+id/Par"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numeroTrou"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/textPar"
                android:textSize="15dp"
                android:text="4"/>

            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:text="Score : "/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Par"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/textScore"
                android:textSize="15dp"
                android:text="0"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/nextHole"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                app:srcCompat="@android:drawable/ic_menu_rotate"
                app:backgroundTint="@color/colorPrimaryDark"
                app:rippleColor="@color/ripples"
                android:layout_marginEnd="15dp"
                android:layout_alignTop="@+id/scorePlus"
                android:layout_toStartOf="@+id/scorePlus"
                android:clickable="true"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/scorePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:srcCompat="@android:drawable/ic_input_add"
                app:backgroundTint="@color/colorPrimaryDark"
                app:rippleColor="@color/ripples"
                android:layout_marginEnd="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/fragment_weather"></include>


</RelativeLayout>




