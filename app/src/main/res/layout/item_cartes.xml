<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/cardview_shadow_start_color"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carteTrou"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/drapeauTrou"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/drapeau"
                />

            <TextView
                android:id="@+id/numeroTrou"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/drapeauTrou"
                android:layout_alignTop="@id/drapeauTrou"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/textHandicapTrou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/drapeauTrou"
                android:layout_alignTop="@+id/drapeauTrou"
                android:textStyle="bold"
                android:text="Handicap:"

                />

            <TextView
                android:id="@+id/handicapTrou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textHandicapTrou"
                android:layout_alignTop="@+id/textHandicapTrou"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textScoreTrou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignLeft="@+id/textHandicapTrou"
                android:layout_below="@+id/textHandicapTrou"

                android:text="Score:"

                />
            <TextView
                android:id="@+id/scoreTrou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_alignLeft="@+id/handicapTrou"
                android:layout_below="@+id/handicapTrou"
                />




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
