<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_parties"
    style="@style/AppTheme.Card.Margins"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="true"
    app:cardCornerRadius="@dimen/corner_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/GolfIcone"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical|start"
            android:padding="5dp"
            />


<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_partie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textScoreTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_partie"
        android:text="Score:"



        />
    <TextView
        android:id="@+id/scoreTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textScoreTotal"
        android:layout_below="@+id/date_partie"

        />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:id="@+id/meteoIcone"
        android:padding="5dp"
        android:layout_alignTop="@+id/scoreTotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>